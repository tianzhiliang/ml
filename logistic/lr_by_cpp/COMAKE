#edit-mode: -*- python -*-
#coding:gbk

#工作路径.
WORKROOT('../../../../../../')

#使用硬链接copy.
CopyUsingHardLink(True)

#支持32位/64位平台编译
#ENABLE_MULTI_LIBS(True)

#C预处理器参数.
CPPFLAGS('-D_GNU_SOURCE -D__STDC_LIMIT_MACROS -DVERSION=\\\"1.9.8.7\\\"')
#为32位目标编译指定额外的预处理参数
#CPPFLAGS_32('-D_XOPEN_SOURE=500')

#C编译参数.
CFLAGS('-g -pipe -W -Wall -fPIC')

#C++编译参数.
CXXFLAGS('-g -pipe -W -Wall -fPIC')

#IDL编译参数
IDLFLAGS('--compack')

#UBRPC编译参数
UBRPCFLAGS('--compack')

#头文件路径.
INCPATHS('. ./include ./output ./output/include')

#使用库
#LIBS('./libsrc.a')

#链接参数.
LDFLAGS('-lpthread -lcrypto -lrt')

#依赖模块
#CONFIGS('lib2-64/ullib')

#为32位/64位指定不同的依赖路径.
#CONFIGS_32('lib2/ullib')
#CONFIGS_64('lib2-64/ullib')

user_sources='logisticModel.cpp'
test_pred = 'testLRPred.cpp' 
test_train = 'testLRTrain.cpp'
user_headers='logisticModel.h'
uset_lib = 'liblogisticModel.a'

#静态库
StaticLibrary('logisticModel',Sources(user_sources),HeaderFiles(user_headers))
#可执行文件
Application('LRTrainTool',Sources(test_train),Libraries(uset_lib),HeaderFiles(user_headers))
Application('LRTestTool',Sources(test_pred),Libraries(uset_lib),HeaderFiles(user_headers))

TARGET('rm1',ShellCommands('rm -f *.o *.~'))
#TARGET('cp1',ShellCommands(''))
